# Serve custom error pages
route /errors/* {
root * /var/www/errors
file_server
}

# Log all requests for debugging
log {
output file /var/log/caddy/zitadel-errors.log
format json
}

# Basic reverse proxy to Zitadel (removing complex error handling for now)
reverse_proxy zitadel:8080
}