# Zitadel Configuration
# Copy this file to .env and update the values

# Master key for encryption (must be 32 characters)
ZITADEL_MASTERKEY=MasterkeyNeedsToHave32Characters

# External domain configuration
ZITADEL_EXTERNALDOMAIN=auth.yourdomain.com
ZITADEL_EXTERNALPORT=443
ZITADEL_EXTERNALSECURE=true

# Database configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=zitadel

# Zitadel database user
ZITADEL_DB_USER=zitadel
ZITADEL_DB_PASSWORD=zitadel

# First instance admin user (created during setup)
ZITADEL_ADMIN_USERNAME=admin
ZITADEL_ADMIN_PASSWORD=Password1!
ZITADEL_ADMIN_FIRSTNAME=Admin
ZITADEL_ADMIN_LASTNAME=User
ZITADEL_ADMIN_EMAIL=admin@yourdomain.com

# SSL Certificate configuration (for Caddy)
# Uncomment and configure if using Cloudflare DNS
# CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Email configuration (optional - for notifications)
# ZITADEL_SMTP_HOST=smtp.gmail.com
# ZITADEL_SMTP_PORT=587
# ZITADEL_SMTP_USER=your_email@gmail.com
# ZITADEL_SMTP_PASSWORD=your_app_password
# ZITADEL_SMTP_FROM=noreply@yourdomain.com