---
import Layout from '~/layouts/PageLayout.astro';
import Nav from '~/components/site/Nav.astro';
import Hero from '~/components/site/Hero.astro';

const metadata = {
  title: 'Wenzel Arifiandi',
  description: 'Hi there!',
};
const email = 'hello@wenzelarifiandi.com';
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header"></Fragment>
  <Nav />
  <Hero />

  <section id="work" class="container align-hero">
    <div class="section__inner">
      <h2>Work</h2>
      <p class="muted">Selected projects will appear here soon.</p>
    </div>
  </section>

  <section id="about" class="container align-hero">
    <div class="section__inner">
      <h2>About</h2>
      <p class="muted">More details coming shortly.</p>
    </div>
  </section>

  <section id="contact" class="container align-hero page-spacer">
    <div class="section__inner">
      <h2>Contact</h2>
      <p class="muted">Email me at <a href={`mailto:${email}`} class="accent">{email}</a>.</p>
    </div>
  </section>
</Layout>

<style>
  h2 { font-size: var(--h2); letter-spacing: -0.01em; margin-bottom: .5rem; }
  .muted { color: color-mix(in oklab, var(--ink), black 25%); }
  .section__inner { padding-left: var(--pad-x); }
  /* Add breathing room between sections */
  #work, #about, #contact { padding-top: 28px; padding-bottom: 28px; }
  .page-spacer { padding-bottom: clamp(64px, 10vw, 120px); }

  /* Fix section typography to non-responsive sizes on this page */
  .section__inner { --h2: 1.75rem; }
  .section__inner p,
  .section__inner a { font-size: 1rem; }
</style>
