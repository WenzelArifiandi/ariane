---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }

    /* ——— Site (legacy) design tokens ——— */
    /* Core neutrals and page */
    --ink: #101114;
    --page: #FEFBFF;

    /* Palette */
    --wisteria: #8b7cf0;
    --lilac: #eee9ff;
    --salmon: #ff8e7a;
    --sakura: #ffd5dc;
    --mauve: #b99ad9;

    /* Typography */
    --h1: clamp(2.5rem, 3vw + 1rem, 4rem);
    --h2: clamp(1.5rem, 1.5vw + 1rem, 2rem);
    --body: clamp(1rem, 0.2vw + 0.9rem, 1.125rem);

    /* Radii / shadow */
    --radius: 12px;
    --shadow: 0 8px 24px rgba(0, 0, 0, 0.06);

    /* Minimal layout helpers to match site */
    --pad-x: clamp(1rem, 4vw, 2rem);
    --align-shift: 20px;

    /* M3 tokens (light) */
    --md-sys-color-primary: #7150D9;
    --md-sys-color-on-primary: #fff;
    --md-sys-color-surface: var(--page);
    --md-sys-color-on-surface: var(--ink);
    --md-sys-shape-corner-small: 8px;
    --md-sys-shape-corner-medium: 12px;
    --md-sys-shape-corner-large: 20px;
    --md-sys-elevation-1: 0 6px 20px rgba(0,0,0,.06);
    --md-sys-elevation-2: 0 12px 28px rgba(0,0,0,.08);
    --md-sys-motion-duration-short: 140ms;
    --md-sys-motion-ease-standard: cubic-bezier(.2, 0, 0, 1);
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }

    /* M3 tokens (dark) */
    --md-sys-color-primary: color-mix(in oklab, #7150D9, white 10%);
    --md-sys-color-on-primary: #111;
    --md-sys-color-surface: #0f0f12;
    --md-sys-color-on-surface: #e8e8ee;
  }

  /* ——— Global helpers from site to aid migration ——— */
  body { min-width: 360px; }
  .container { max-width: 1100px; margin-inline: auto; padding-inline: var(--pad-x); }
  .container-xl { max-width: 1200px; margin-inline: auto; padding-inline: var(--pad-x); }
  .wrap, .page-wrap { max-width: 1100px; margin-left: auto; margin-right: auto; padding-left: var(--pad-x); padding-right: var(--pad-x); }
  .align-hero { padding-left: var(--pad-x); }

  /* Tighten padding/alignment on very small screens */
  @media (max-width: 420px) {
    :root { --pad-x: 8px; --align-shift: 12px; }
    .align-hero { padding-left: calc(var(--pad-x) + var(--align-shift)); }
  }

  .card { border-radius: var(--radius); box-shadow: var(--shadow); }
  .accent { color: var(--wisteria); }

  /* Material 3-inspired button/class parity */
  .btn { display:inline-flex; align-items:center; gap:.5rem; padding:.7rem 1rem; border-radius:999px; border:0; text-decoration:none; -webkit-appearance:none; appearance:none; }
  .btn.m3 { background: var(--md-sys-color-primary); color: var(--md-sys-color-on-primary); box-shadow: var(--md-sys-elevation-1); font-weight:650; }
  .btn.m3::after { content: none; }
  .btn.m3:hover { transform: translateY(-1px); box-shadow: var(--md-sys-elevation-2); }

  a.btn, a.btn:hover, a.btn:visited, a.btn:active { text-decoration: none !important; }

  /* Global Maker chip style so it can be reused (e.g., for CTA) */
  .chip.m3 { background: var(--md-sys-color-primary); color: var(--md-sys-color-on-primary); border: 0; border-radius: 999px; padding: .45rem .8rem; box-shadow: var(--md-sys-elevation-1); cursor: pointer; font-weight: 650; white-space: nowrap; transition: transform var(--md-sys-motion-duration-short) var(--md-sys-motion-ease-standard), box-shadow var(--md-sys-motion-duration-short) var(--md-sys-motion-ease-standard); font-size: var(--body); line-height: 1.2; font-family: inherit; display: inline-flex; align-items: center; gap: .35rem; text-decoration: none; }
  .chip.m3:hover { box-shadow: var(--md-sys-elevation-2); transform: translateY(-1px); }
  .chip.m3 .material-symbols-rounded { color: #fff; font-variation-settings: 'FILL' 1, 'wght' 600, 'GRAD' 0, 'opsz' 24; font-size: 18px; vertical-align: -2px; }
</style>
