---
import Base from '../layouts/Base.astro'
import Nav from '../components/Nav.astro'
import Hero from '../components/Hero.astro'
---

<Base>
  <Nav />
  <Hero />

  <section id="work" class="container my-12">
    <h2 class="text-[clamp(1.5rem,1.5vw+1rem,2rem)] tracking-[-0.01em] mb-2">Work</h2>
    <p class="opacity-80">Selected projects will appear here soon.</p>
  </section>

  <section id="about" class="container my-12">
    <h2 class="text-[clamp(1.5rem,1.5vw+1rem,2rem)] tracking-[-0.01em] mb-2">About</h2>
    <p class="opacity-80">More details coming shortly.</p>
  </section>

  <section id="contact" class="container my-12">
    <h2 class="text-[clamp(1.5rem,1.5vw+1rem,2rem)] tracking-[-0.01em] mb-2">Contact</h2>
    <p class="opacity-80">Email me at <a href="mailto:hello@wenzelarifiandi.com" class="text-[color:var(--primary)] hover:underline">hello@wenzelarifiandi.com</a>.</p>
  </section>
</Base>

