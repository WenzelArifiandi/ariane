---
const title = 'Hi there!'
const subtitle = 'This site is being refreshed!'
---

<section class="container-xl my-4">
  <div class="rounded-[var(--radius)] overflow-clip shadow-[var(--elevation-1)] bg-gradient-to-br from-[var(--sakura,_#ffd5dc)] to-[var(--mauve,_#b99ad9)]">
    <div class="container py-10 grid gap-4">
      <h1 class="text-[clamp(2.5rem,3vw+1rem,4rem)] leading-[1.05] tracking-[-0.02em] text-[color:color-mix(in_oklab,var(--ink),black_10%)]">{title}</h1>
      <p class="text-[clamp(1.05rem,.6vw+1rem,1.25rem)] text-[color:color-mix(in_oklab,var(--ink),black_20%)] max-w-[38ch]">{subtitle}</p>
      <a class="btn btn-primary" href="#work">See Work</a>
    </div>
  </div>
</section>

