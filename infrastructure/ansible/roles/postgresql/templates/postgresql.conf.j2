# PostgreSQL 16 Configuration
# Optimized for NVMe SSD + {{ ansible_memtotal_mb // 1024 }}GB RAM
# Cell v0 Architecture - {{ ansible_hostname }}

#------------------------------------------------------------------------------
# CONNECTIONS AND AUTHENTICATION
#------------------------------------------------------------------------------

listen_addresses = '*'
port = 5432
max_connections = {{ postgres_max_connections | default(200) }}
superuser_reserved_connections = 3

# Authentication
password_encryption = scram-sha-256

#------------------------------------------------------------------------------
# RESOURCE USAGE (except WAL)
#------------------------------------------------------------------------------

# Memory settings optimized for {{ ansible_memtotal_mb // 1024 }}GB RAM
shared_buffers = {{ postgres_shared_buffers | default('4GB') }}
huge_pages = try
temp_buffers = 32MB
work_mem = {{ postgres_work_mem | default('32MB') }}
hash_mem_multiplier = 1.5
maintenance_work_mem = {{ postgres_maintenance_work_mem | default('1GB') }}

# Kernel resource usage
max_files_per_process = 4000
shared_preload_libraries = 'pg_stat_statements'

# Cost-based vacuum delay
vacuum_cost_delay = 0
vacuum_cost_page_hit = 1
vacuum_cost_page_miss = 2
vacuum_cost_page_dirty = 20
vacuum_cost_limit = 10000

# Background writer
bgwriter_delay = 200ms
bgwriter_lru_maxpages = 100
bgwriter_lru_multiplier = 2.0
bgwriter_flush_after = 512kB

# Asynchronous behavior
effective_io_concurrency = {{ postgres_effective_io_concurrency | default(200) }}
maintenance_io_concurrency = {{ postgres_maintenance_io_concurrency | default(10) }}
max_worker_processes = {{ ansible_processor_vcpus }}
max_parallel_workers_per_gather = {{ (ansible_processor_vcpus / 2) | int }}
max_parallel_workers = {{ ansible_processor_vcpus }}
max_parallel_maintenance_workers = {{ (ansible_processor_vcpus / 2) | int }}

#------------------------------------------------------------------------------
# WRITE-AHEAD LOG
#------------------------------------------------------------------------------

wal_level = replica
fsync = on
synchronous_commit = on
wal_sync_method = fdatasync
full_page_writes = on
wal_compression = on
wal_log_hints = on
wal_init_zero = on
wal_recycle = on
wal_buffers = {{ postgres_wal_buffers | default('16MB') }}
wal_writer_delay = 200ms
wal_writer_flush_after = 1MB

# Checkpoints - optimized for NVMe
checkpoint_timeout = 15min
checkpoint_completion_target = {{ postgres_checkpoint_completion_target | default(0.9) }}
checkpoint_flush_after = 256kB
checkpoint_warning = 30s

# Archiving (for pgBackRest)
archive_mode = on
archive_command = 'pgbackrest --stanza={{ pgbackrest_stanza }} archive-push %p'
archive_timeout = 300s

# WAL size management
min_wal_size = 2GB
max_wal_size = {{ postgres_max_wal_size | default('8GB') }}

#------------------------------------------------------------------------------
# REPLICATION
#------------------------------------------------------------------------------

max_wal_senders = 10
max_replication_slots = 10
track_commit_timestamp = off
wal_receiver_create_temp_slot = off

#------------------------------------------------------------------------------
# QUERY TUNING
#------------------------------------------------------------------------------

# Planner method configuration
enable_bitmapscan = on
enable_hashagg = on
enable_hashjoin = on
enable_indexscan = on
enable_indexonlyscan = on
enable_material = on
enable_mergejoin = on
enable_nestloop = on
enable_parallel_append = on
enable_parallel_hash = on
enable_partition_pruning = on
enable_partitionwise_join = on
enable_partitionwise_aggregate = on
enable_seqscan = on
enable_sort = on
enable_tidscan = on

# Planner cost constants - optimized for NVMe SSD
seq_page_cost = 1.0
random_page_cost = {{ postgres_random_page_cost | default(1.1) }}
cpu_tuple_cost = 0.01
cpu_index_tuple_cost = 0.005
cpu_operator_cost = 0.0025
parallel_tuple_cost = 0.1
parallel_setup_cost = 1000.0

min_parallel_table_scan_size = 8MB
min_parallel_index_scan_size = 512kB

# Other planner options
effective_cache_size = {{ postgres_effective_cache_size | default('10GB') }}
jit = on

#------------------------------------------------------------------------------
# REPORTING AND LOGGING
#------------------------------------------------------------------------------

# Where to log
log_destination = 'csvlog'
logging_collector = on

# When to log
log_min_messages = warning
log_min_error_statement = error
log_min_duration_statement = {{ postgres_log_min_duration | default(1000) }}

# What to log
log_checkpoints = on
log_connections = on
log_disconnections = on
log_lock_waits = on
log_temp_files = 10MB
log_autovacuum_min_duration = 0
log_error_verbosity = default
log_hostname = off
log_line_prefix = '%t [%p]: [%l-1] user=%u,db=%d,app=%a,client=%h '
log_statement = 'none'
log_timezone = 'UTC'

# CSV log
log_directory = 'log'
log_filename = 'postgresql-%Y-%m-%d_%H%M%S.log'
log_rotation_age = 1d
log_rotation_size = 100MB
log_truncate_on_rotation = off

#------------------------------------------------------------------------------
# PROCESS TITLE
#------------------------------------------------------------------------------

cluster_name = '{{ ansible_hostname }}-postgres'
update_process_title = on

#------------------------------------------------------------------------------
# STATISTICS
#------------------------------------------------------------------------------

# Query/index statistics collector
track_activities = on
track_activity_query_size = 2048
track_counts = on
track_io_timing = on
track_wal_io_timing = on
track_functions = all
stats_temp_directory = 'pg_stat_tmp'

# pg_stat_statements
pg_stat_statements.max = 10000
pg_stat_statements.track = all
pg_stat_statements.track_utility = off
pg_stat_statements.save = on

#------------------------------------------------------------------------------
# AUTOVACUUM
#------------------------------------------------------------------------------

autovacuum = on
autovacuum_max_workers = {{ (ansible_processor_vcpus / 2) | int }}
autovacuum_naptime = 30s
autovacuum_vacuum_threshold = 50
autovacuum_vacuum_insert_threshold = 1000
autovacuum_analyze_threshold = 50
autovacuum_vacuum_scale_factor = 0.1
autovacuum_vacuum_insert_scale_factor = 0.1
autovacuum_analyze_scale_factor = 0.05
autovacuum_freeze_max_age = 200000000
autovacuum_multixact_freeze_max_age = 400000000
autovacuum_vacuum_cost_delay = 2ms
autovacuum_vacuum_cost_limit = 400
autovacuum_work_mem = 1GB

#------------------------------------------------------------------------------
# CLIENT CONNECTION DEFAULTS
#------------------------------------------------------------------------------

# Statement behavior
search_path = '"$user", public'
row_security = on
default_table_access_method = 'heap'
default_tablespace = ''
temp_tablespaces = ''

# Locale and formatting
datestyle = 'iso, mdy'
intervalstyle = 'postgres'
timezone = 'UTC'
timezone_abbreviations = 'Default'
extra_float_digits = 1
client_encoding = utf8

# Shared library preloading
local_preload_libraries = ''
session_preload_libraries = ''

# Other defaults
default_text_search_config = 'pg_catalog.english'
dynamic_library_path = '$libdir'

#------------------------------------------------------------------------------
# LOCK MANAGEMENT
#------------------------------------------------------------------------------

deadlock_timeout = 1s
max_locks_per_transaction = 64
max_pred_locks_per_transaction = 64
max_pred_locks_per_relation = -2
max_pred_locks_per_page = 2

#------------------------------------------------------------------------------
# VERSION AND PLATFORM COMPATIBILITY
#------------------------------------------------------------------------------

array_nulls = on
backslash_quote = safe_encoding
escape_string_warning = on
lo_compat_privileges = off
quote_all_identifiers = off
standard_conforming_strings = on
synchronize_seqscans = on

#------------------------------------------------------------------------------
# ERROR HANDLING
#------------------------------------------------------------------------------

exit_on_error = off
restart_after_crash = on
data_sync_retry = off

#------------------------------------------------------------------------------
# CONFIG FILE INCLUDES
#------------------------------------------------------------------------------

# These options allow settings to be loaded from files other than the
# default postgresql.conf.

#include_dir = 'conf.d'			# include files ending in '.conf' from
					# directory 'conf.d'
#include_if_exists = 'exists.conf'	# include file only if it exists
#include = 'special.conf'		# include file

#------------------------------------------------------------------------------
# CUSTOMIZED OPTIONS
#------------------------------------------------------------------------------

# Cell v0 specific optimizations
shared_memory_type = mmap
dynamic_shared_memory_type = posix
huge_page_size = 0

