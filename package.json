{
  "name": "ariane-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "npm run dev:site",
    "dev:bubble": "npm --prefix site run dev:bubble:cf:named",
    "env:site:init": "bash -lc 'cd site && cp -n .env.example .env || true && echo \"Created site/.env (or it already exists).\"'",
    "env:site:open": "bash -lc 'open site/.env'",
    "dev:site": "npm --prefix site run dev",
    "dev:studio": "npm --prefix studio run dev",
    "deploy:studio": "bash studio/scripts/deploy.sh",
    "security:autofix": "node security-autofix.js",
    "security:autofix:dry-run": "node security-autofix.js --dry-run",
    "security:autofix:verbose": "node security-autofix.js --verbose",
    "security:autofix:advanced": "node security-autofix-advanced.js",
    "security:autofix:advanced:dry-run": "node security-autofix-advanced.js --dry-run",
    "security:autofix:advanced:aggressive": "node security-autofix-advanced.js --aggressive",
    "security:autofix:test": "node test-security-autofix.js",
    "deps:audit": "npm audit && npm --prefix site audit",
    "deps:audit:fix": "npm audit fix && npm --prefix site audit fix"
  }
}