---
/**
 * Base layout
 * Accepts either:
 *  - title / description props, or
 *  - a `page` object: { title, description, url, image }
 */
import '../../styles/global.css' // adjust the relative path if needed

interface PageMeta {
  title?: string
  description?: string
  url?: string
  image?: string
}

interface Props {
  title?: string
  description?: string
  page?: PageMeta
}

const { title, description, page } = Astro.props as Props

const meta: PageMeta = {
  title: page?.title ?? title ?? 'Ariane',
  description: page?.description ?? description ?? 'Portfolio of Wenzel Arifiandi',
  url: page?.url,
  image: page?.image,
}
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{meta.title}</title>
    {meta.description && <meta name="description" content={meta.description} />}

    {/* OpenGraph / Twitter minimal set */}
    <meta property="og:title" content={meta.title} />
    {meta.description && <meta property="og:description" content={meta.description} />}
    {meta.url && <meta property="og:url" content={meta.url} />}
    {meta.image && <meta property="og:image" content={meta.image} />}
    <meta name="twitter:card" content={meta.image ? 'summary_large_image' : 'summary'} />

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body class="min-h-dvh bg-white text-neutral-900 antialiased font-sans">
    <main class="mx-auto max-w-6xl px-6 py-16">
      <slot />
    </main>
  </body>
</html>