---
import Base from '../layouts/Base.astro';
---

<Base title="Maker - Wenzel Arifiandi">
  <main class="container">
    <div class="maker-page">
      <h1>Maker</h1>
      <p class="subtitle">Your authenticated workspace</p>

      <div class="maker-grid">
        <a href="https://neve.wenzelarifiandi.com" class="maker-card">
          <span class="material-symbols-rounded icon">hub</span>
          <div class="content">
            <h2>Neve</h2>
            <p>Infrastructure hub</p>
          </div>
        </a>

        <a href="https://etoile.wenzelarifiandi.com" class="maker-card">
          <span class="material-symbols-rounded icon">cloud_upload</span>
          <div class="content">
            <h2>Etoile</h2>
            <p>Cloud storage</p>
          </div>
        </a>
      </div>
    </div>
  </main>
</Base>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .maker-page {
    text-align: center;
    padding: 4rem 2rem;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--ariane-text-ink);
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--ariane-text-ink-dim);
    margin-bottom: 4rem;
  }

  .maker-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .maker-card {
    background: var(--glass-bg, rgba(255, 255, 255, 0.1));
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 16px;
    padding: 2rem;
    text-decoration: none;
    color: var(--ariane-text-ink);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .maker-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .maker-card .icon {
    font-size: 48px;
    color: var(--md-sys-color-primary, #7150D9);
  }

  .maker-card .content {
    text-align: center;
  }

  .maker-card h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .maker-card p {
    font-size: 0.95rem;
    color: var(--ariane-text-ink-dim);
    margin: 0;
  }
</style>
