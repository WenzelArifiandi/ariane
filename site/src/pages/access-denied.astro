---
const msg = Astro.url.searchParams.get('msg') || 'Access denied';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Access denied</title>
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body style="font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; min-height: 100dvh; display: grid; place-items: center; background: #fff; color: #1a1a1a;">
    <main style="text-align:center; padding: 24px; border: 1px solid #eee; border-radius: 16px; max-width: 520px;">
      <h1 style="margin: 0 0 8px; font-size: 1.75rem;">Access denied</h1>
      <p style="margin: 0 0 16px; opacity: .8;">{msg}</p>
      <p><a href="/">Go home</a></p>
    </main>
  </body>
</html>
