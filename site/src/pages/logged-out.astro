---
const AUTH0_DOMAIN = (import.meta as any).env?.PUBLIC_AUTH0_DOMAIN || process.env.PUBLIC_AUTH0_DOMAIN;
const AUTH0_CLIENT_ID = (import.meta as any).env?.PUBLIC_AUTH0_CLIENT_ID || process.env.PUBLIC_AUTH0_CLIENT_ID;
const OIDC_END_SESSION = (import.meta as any).env?.PUBLIC_OIDC_END_SESSION_ENDPOINT || process.env.PUBLIC_OIDC_END_SESSION_ENDPOINT;
const OIDC_CLIENT_ID = (import.meta as any).env?.PUBLIC_OIDC_CLIENT_ID || process.env.PUBLIC_OIDC_CLIENT_ID;
const here = (Astro as any).url as URL | undefined;
const next = here?.searchParams.get('next') || '/';
// Build absolute origin for return links
const headers = Astro.request.headers;
const host = headers.get('x-forwarded-host') || headers.get('host') || '127.0.0.1:4321';
const proto = headers.get('x-forwarded-proto') || (host.includes('127.0.0.1') || host.includes('localhost') ? 'http' : 'https');
const origin = `${proto}://${host}`;
const homeHref = new URL('/', origin).toString();
// Optional Auth0 logout link (clears IdP SSO to prevent silent re-login)
let idpLogoutHref: string | undefined;
if (AUTH0_DOMAIN && AUTH0_CLIENT_ID) {
  const u = new URL(`https://${AUTH0_DOMAIN}/v2/logout`);
  u.searchParams.set('client_id', AUTH0_CLIENT_ID);
  // After IdP logout, land back on this logged-out page
  u.searchParams.set('returnTo', new URL('/logged-out', origin).toString());
  idpLogoutHref = u.toString();
} else if (OIDC_END_SESSION) {
  const u = new URL(OIDC_END_SESSION);
  u.searchParams.set('post_logout_redirect_uri', new URL('/logged-out', origin).toString());
  if (OIDC_CLIENT_ID) u.searchParams.set('client_id', OIDC_CLIENT_ID);
  idpLogoutHref = u.toString();
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Signed out</title>
    <link rel="icon" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body style="font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; min-height: 100dvh; display: grid; place-items: center; background: #f7f7f8; color: #1a1a1a;">
    <main style="text-align:center; padding: 24px; background: white; border-radius: 16px; box-shadow: 0 10px 30px rgba(0,0,0,.06); max-width: 520px;">
      <h1 style="margin: 0 0 8px; font-size: 1.75rem;">You’re signed out</h1>
      <p style="margin: 0 0 16px; opacity: .8;">Your Cloudflare Access session has ended.</p>
      <div style="display:flex; gap:.5rem; justify-content:center; flex-wrap:wrap; margin-top: 16px;">
        <a href={homeHref} style="display:inline-flex; align-items:center; gap:.5rem; background:#2563eb; color:#fff; padding:.7rem 1rem; border-radius:10px; text-decoration:none; font-weight:600; white-space:nowrap;">Go to homepage</a>
        {idpLogoutHref && (
          <a href={idpLogoutHref} style="display:inline-flex; align-items:center; gap:.5rem; background:#111827; color:#fff; padding:.7rem 1rem; border-radius:10px; text-decoration:none; font-weight:600; white-space:nowrap;">Sign out of Identity Provider</a>
        )}
      </div>
      <p style="margin-top:12px; font-size:.9rem; opacity:.7;">Next page: <code>{next}</code></p>
      <p style="margin-top:8px; font-size:.85rem; opacity:.6;">Tip: If you’re immediately prompted to log in again, your identity provider session may still be active. Use “Sign out of Identity Provider,” or close the tab.</p>
    </main>
  </body>
  </html>
