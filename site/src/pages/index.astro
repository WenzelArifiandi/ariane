---
import Base from '../layouts/Base.astro'
import Nav from '../components/Nav.astro'
import Hero from '../components/Hero.astro'
import '../styles/global.css' // adjust the relative path if needed

const page = {
  title: 'Ariane — Wenzel Arifiandi',
  description: 'Automotive design portfolio — concepts, surfacing, visualization.',
  url: 'https://ariane.vercel.app/',
  image: '/og.jpg',
}
---

<Base title={page.title} description={page.description} ogImage={page.image} pathname="/">
  <Nav />
  <Hero />

  {/* Work anchor */}
  <section id="work" class="wrap">
    <h2>Work</h2>
    <p class="muted">Your featured projects will show here.</p>
  </section>

  {/* About anchor */}
  <section id="about" class="wrap">
    <h2>About</h2>
    <p class="muted">Short bio and CV link.</p>
  </section>

  {/* Contact anchor */}
  <section id="contact" class="wrap">
    <h2>Contact</h2>
    <p class="muted">Email / social links.</p>
  </section>
</Base>

<style>
  .wrap { max-width: 1100px; margin: 3rem auto; padding: 0 1rem; }
  h2 { font-size: var(--h2); letter-spacing: -0.01em; margin-bottom: .5rem; }
  .muted { color: color-mix(in oklab, var(--ink), black 25%); }
</style>