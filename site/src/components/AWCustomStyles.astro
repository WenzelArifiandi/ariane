---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  /* Global helpers from AstroWind */
  .bg-page { background-color: var(--aw-color-bg-page); }
  .text-page { color: var(--aw-color-text-default); }
  .text-default { color: var(--aw-color-text-default); }
  .text-muted { color: var(--aw-color-text-muted); }

  /* Shared containers to match AstroWind */
  .container { max-width: 1100px; margin-inline: auto; padding-inline: var(--pad-x); }
  .container-xl { max-width: 1200px; margin-inline: auto; padding-inline: var(--pad-x); }
  .wrap, .page-wrap { max-width: 1100px; margin-left: auto; margin-right: auto; padding-left: var(--pad-x); padding-right: var(--pad-x); }
  .align-hero { padding-left: var(--pad-x); }

  /* Pill buttons/chips parity */
  .btn { display:inline-flex; align-items:center; gap:.5rem; padding:.7rem 1rem; border-radius:999px; border:0; text-decoration:none; -webkit-appearance:none; appearance:none; }
  .btn.m3 { background: var(--md-sys-color-primary, #7150D9); color: var(--md-sys-color-on-primary, #fff); box-shadow: var(--md-sys-elevation-1, 0 6px 20px rgba(0,0,0,.06)); font-weight:650; }
  .btn.m3::after { content: none; }
  .btn.m3:hover { transform: translateY(-1px); box-shadow: var(--md-sys-elevation-2, 0 12px 28px rgba(0,0,0,.08)); }
  a.btn, a.btn:hover, a.btn:visited, a.btn:active { text-decoration: none !important; }

  .chip.m3 { background: var(--md-sys-color-primary, #7150D9); color: var(--md-sys-color-on-primary, #fff); border: 0; border-radius: 999px; padding: .45rem .8rem; box-shadow: var(--md-sys-elevation-1, 0 6px 20px rgba(0,0,0,.06)); cursor: pointer; font-weight: 650; white-space: nowrap; transition: transform var(--md-sys-motion-duration-short, .14s) var(--md-sys-motion-ease-standard, cubic-bezier(.2,0,0,1)), box-shadow var(--md-sys-motion-duration-short, .14s) var(--md-sys-motion-ease-standard, cubic-bezier(.2,0,0,1)); font-size: var(--body); line-height: 1.2; font-family: inherit; display: inline-flex; align-items: center; gap: .35rem; text-decoration: none; }
  .chip.m3:hover { box-shadow: var(--md-sys-elevation-2, 0 12px 28px rgba(0,0,0,.08)); transform: translateY(-1px); }
  .chip.m3 .material-symbols-rounded { color: #fff; font-variation-settings: 'FILL' 1, 'wght' 600, 'GRAD' 0, 'opsz' 24; font-size: 18px; vertical-align: -2px; }
  @media (max-width: 420px) { .chip.m3 .label { display: none; } .chip.m3 { padding: .45rem .6rem; } }
</style>
