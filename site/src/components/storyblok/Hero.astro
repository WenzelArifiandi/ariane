---
import { storyblokEditable } from '@storyblok/astro'

interface Props {
  blok: {
    title: string
    subtitle: string
    cta_text: string
    cta_link: string
    component: string
  }
}

const { blok } = Astro.props
---

<section class="container align-hero" {...storyblokEditable(blok)}>
  <div class="hero">
    <div class="hero__inner">
      <h1 class="hero__title">{blok.title}</h1>
      <p class="hero__subtitle">{blok.subtitle}</p>
      {blok.cta_text && blok.cta_link && (
        <a class="btn m3" href={blok.cta_link}>{blok.cta_text}</a>
      )}
    </div>
  </div>
</section>

<style>
  @layer app-components {
    /* Typography: enforce Inter everywhere */
    :host, :root, .hero {
      font-family: 'Inter Variable', 'Inter', ui-sans-serif, system-ui !important;
    }

    .hero {
      display: flex;
      align-items: center;
      min-height: 80vh;
      padding: 4rem 0;
      /* Ensure text on mauve/purple background is visible */
      color: #fff;
    }

    .hero__inner {
      text-align: center;
      max-width: 800px;
      margin: 0 auto;
    }

    .hero__title {
      font-size: var(--h1);
      font-weight: 700;
      line-height: 1.1;
      margin-bottom: 1rem;
      letter-spacing: -0.02em;
    }

    .hero__subtitle {
      font-size: var(--body);
      color: inherit;
      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      padding: 0.75rem 1.5rem;
      background: var(--wisteria);
      color: white;
      text-decoration: none;
      border-radius: var(--radius);
      font-weight: 500;
      transition: all 0.2s ease;
    }

    .btn:hover {
      background: color-mix(in oklab, var(--wisteria), black 10%);
      transform: translateY(-1px);
    }
  }
</style>