{
  "name": "ariane-site",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "wasm:build:signer": "bash -lc 'command -v wasm-pack >/dev/null 2>&1 || cargo install wasm-pack --locked; cd ../wasm/session-signer && wasm-pack build --target web --release --out-dir ../../site/src/lib/wasm/session-signer'",
    "wasm:clean:signer": "bash -lc 'rm -rf src/lib/wasm/session-signer'",
    "wasm:rebuild:signer": "npm run wasm:clean:signer && npm run wasm:build:signer",
    "dev:kill": "bash -lc 'lsof -t -i:4321 | xargs -r kill -9 2>/dev/null || true'",
    "predev": "npm run dev:kill",
    "dev": "astro dev --port 4321",
    "predev:cf": "npm run dev:kill",
    "dev:cf": "CF_TUNNEL_HOST=tunnel.wenzelarifiandi.com astro dev --host 127.0.0.1 --port 4321",
    "dev:lan": "astro dev --host 0.0.0.0 --port 4321",
    "dev:local": "astro dev --host 127.0.0.1 --port 4321",
    "dev:bubble": "concurrently -k -n dev,tunnel -c auto \"npm:dev\" \"npm:cf:tunnel\"",
    "cf:tunnel": "wait-on -t 300000 http://127.0.0.1:4321 && cloudflared tunnel --url http://127.0.0.1:4321",
    "cf:tunnel:named": "wait-on -t 300000 http://127.0.0.1:4321 && cloudflared tunnel --config cloudflared/config.yml run ariane-dev",
    "cf:tunnel:bg": "wait-on -t 300000 http://127.0.0.1:4321 && nohup cloudflared tunnel --config $(pwd)/cloudflared/config.yml run ariane-dev > $HOME/.cloudflared/ariane-dev.log 2>&1 & echo $! > $HOME/.cloudflared/ariane-dev.pid && for i in {1..20}; do [ -f $HOME/.cloudflared/ariane-dev.log ] && break || sleep 0.25; done; tail -n 20 $HOME/.cloudflared/ariane-dev.log",
    "cf:tunnel:bg:stop": "test -f $HOME/.cloudflared/ariane-dev.pid && kill $(cat $HOME/.cloudflared/ariane-dev.pid) || true",
    "dev:bg": "nohup bash -lc 'CF_TUNNEL_HOST=tunnel.wenzelarifiandi.com astro dev --host 127.0.0.1 --port 4321' > $HOME/.cloudflared/astro-dev.log 2>&1 & echo $! > $HOME/.cloudflared/astro-dev.pid && sleep 1 && tail -n 20 $HOME/.cloudflared/astro-dev.log",
    "dev:bg:stop": "test -f $HOME/.cloudflared/astro-dev.pid && kill $(cat $HOME/.cloudflared/astro-dev.pid) || true",
    "cf:setup": "bash scripts/setup-cf-tunnel.sh",
    "dev:bubble:cf:named": "concurrently -k -n dev,cf -c auto \"npm:dev:cf\" \"npm:cf:tunnel:named\"",
    "dev:bubble:cf": "concurrently -k -n dev,cf -c auto \"npm:dev\" \"npm:cf:tunnel\"",
    "build": "astro build",
    "preview": "astro preview",
    "lint": "eslint .",
    "format": "prettier . --write",
    "check": "astro check"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.1",
    "@fontsource-variable/inter": "^5.2.8",
    "@material/web": "^2.4.0",
    "@portabletext/to-html": "^3.0.0",
    "@sanity/client": "^7.11.2",
    "@sanity/image-url": "^1.2.0",
    "@specy/liquid-glass-react": "^1.0.2",
    "@storyblok/astro": "^7.3.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "^5.16.0",
    "astro-icon": "^1.1.5",
    "glob": "^13.0.0",
    "groq": "^4.18.0",
    "jose": "^6.1.0",
    "lucide-astro": "^0.544.0",
    "postprocessing": "^6.27.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "three": "0.181.2",
    "vite": "^7.2.4"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^9.4.3",
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/vercel": "^8.2.7",
    "@iconify-json/tabler": "^1.2.23",
    "@tailwindcss/typography": "^0.5.19",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "path-to-regexp": "^8.3.0"
  }
}
